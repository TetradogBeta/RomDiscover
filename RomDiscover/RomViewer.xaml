<UserControl x:Class="RomDiscover.RomViewer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RomDiscover"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" >
    <Grid x:Name="grid" MouseLeftButtonUp="SeleccionadoClick">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" MinHeight="25"/>
            <RowDefinition Height="70"/>
        </Grid.RowDefinitions>
        <Image x:Name="imgRom" MouseLeftButtonUp="SeleccionadoClick"/>
        <TextBlock x:Name="txtRomName"  MouseLeftButtonUp="SeleccionadoClick" Grid.Row="1" HorizontalAlignment="Center" TextWrapping="WrapWithOverflow"/>
   
    </Grid>
</UserControl>
